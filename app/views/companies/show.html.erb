<h2 align="center"><%= @company.name %></h2>
<div class="float-left">
  <%= link_to '<i class="fas fa-edit"></i> Edit company'.html_safe, edit_company_path(@company), 
              class: "btn btn-outline-secondary btn-sm" %>
</div>
<div class="float-right">
  <%= link_to '<i class="fas fa-user-plus"></i> New Deparment'.html_safe, new_department_path(:company_id => @company), 
              class: "btn btn-outline-secondary btn-sm" %>
</div>
<div class="clearfix"></div>
<br />

<table class="table table-hover">
  <thead class="thead-dark" align="center">
    <tr>
      <th scope="col">Department Name</th>
      <th scope="col">Employees No.</th>     
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.users.count  %></td>       
        <td><%= link_to '<i class="fas fa-eye"></i> View Employees'.html_safe, department, 
                        class: "btn btn-outline-info btn-sm btn-block" %></td>
        <td><%= link_to '<i class="fas fa-edit"></i> Edit'.html_safe, edit_department_path(department), class: "btn btn-outline-primary btn-sm btn-block" %></td>
        <td><%= link_to '<i class="fas fa-times"></i> Delete'.html_safe, department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

