<h1 align="center">Users</h1>
<div class="float-left">
  <%= link_to '<i class="fas fa-caret-left"></i> Back'.html_safe, new_user_path, 
              class: "btn btn-outline-secondary btn-sm" %>
</div>
<div class="float-right">
  <%= link_to '<i class="fas fa-user-plus"></i> New user'.html_safe, new_user_path, 
              class: "btn btn-outline-secondary btn-sm" %>
</div>
<div class="clearfix"></div>
<br />

<table class="table table-hover">
  <thead class="thead-dark" align="center">
    <tr>
      <th scope="col">Full name</th>      
      <th scope="col">Email</th>      
      <th colspan="3" scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>        
        <td><%= user.email %></td>        
        <td><%= link_to '<i class="fas fa-eye"></i> Show'.html_safe , user, 
                         class: "btn btn-outline-info btn-sm btn-block" %></td>
        <td><%= link_to '<i class="fas fa-user-edit"></i> Edit'.html_safe, edit_user_path(user), 
                         class: "btn btn-outline-primary btn-sm btn-block" %></td>
        <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>