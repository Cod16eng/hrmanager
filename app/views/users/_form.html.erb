<%= render 'shared/errors', obj: @user %>
<br>
<%= form_with(model: user, local: true) do |form| %>  
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :middle_name %>
      <%= form.text_field :middle_name, id: :user_middle_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :user_last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :dob %>
      <%= form.date_field :dob, id: :user_dob, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, id: :user_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date %>
      <%= form.date_field :start_date, id: :user_start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :end_date %>
      <%= form.date_field :end_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :position %>
      <%= form.text_field :position, id: :position, class: "form-control" %>
    </div>

    

    <div class="form-group">
      <%= form.label :start_hour %>
      <%= form.time_select :start_hour, as: :time, class: "form-control" %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :holiday %>
          <%= form.number_field :holiday, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :holiday_taken %>
          <%= form.number_field :holiday_taken, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :sick_days %>
          <%= form.number_field :sick_days, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :sick_days_taken %>
          <%= form.number_field :sick_days_taken, {class: "form-control"} %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :eveniment %>
          <%= form.number_field :eveniment, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :eveniment_taken %>
          <%= form.number_field :eveniment_taken, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :company %>
      <%= form.collection_select :company_id, Company.all, :id, :name, {prompt: "Select a Company"}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= form.label :department %>
      <%= form.collection_select :department_id, Department.all, :id, :name, {prompt: "Select a Company"}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, id: :user_password_digest, class: "form-control" %>
    </div>

    <% if @user.new_record? %>
      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "form-control" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :admin %>
      <%= form.check_box :admin, id: :user_admin %>
    </div>
  </div>
</div>

    <div class="form-group">
      <%= form.button(@user.new_record? ? '<i class="fas fa-user-plus"></i> Create user'.html_safe : '<i class="fas fa-paper-plane"></i> Update profile'.html_safe, class: "btn btn-outline-success btn-sm btn-block") %>
    </div>
    <% end %>

