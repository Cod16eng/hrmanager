<%= form_with(model: department, local: true) do |form| %>
  <%= render 'shared/errors', obj: @department %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <% if params[:action] == "new" %>
    <%= form.hidden_field :company_id, :value => params[:company_id] %>
    <% else  %>
    <%= form.hidden_field :company_id %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.button(@department.new_record? ?  '<i class="fas fa-plus"></i> Create Deparment'.html_safe : 
    '<i class="fas fa-paper-plane"></i> Update Deparment'.html_safe, class: "btn btn-outline-success btn-sm") %>
  </div>
<% end %>

