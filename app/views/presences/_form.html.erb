<%= form_with(model: presence, local: true) do |form| %>  
<%= render 'shared/errors', obj: @presence %>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, :value => Date.today, class: "form-control" %>
  </div> 

  <div class="form-group">
    <%= form.label :hour_in %>
    <%= form.time_select :hour_in,  { class: 'form-control' }  %>
  </div>

  <% if params[:action] == "new" %>
    <%= form.hidden_field :user_id, :value => params[:user_id].html_safe %>
  <% else %>
    <%= form.hidden_field :user_id %>
  <% end %> 

  <div class="form-group">
    <%= form.button(@presence.new_record? ? '<i class="fas fa-user-plus"></i> Create presence'.html_safe : '<i class="fas fa-paper-plane"></i> Update presence'.html_safe, class: "btn btn-outline-success btn-sm btn-block")  %>
  </div>
<% end %>
