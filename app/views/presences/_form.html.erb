<%= form_with(model: presence, local: true) do |form| %>  
<%= render 'shared/errors', obj: @presence %>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, :value => Date.today, class: "form-control" %>
  </div> 

  <div class="form-group">
    <%= form.label :hour_in %>
    <%= form.time_select :hour_in,  { class: 'form-control' }  %>
  </div>

  <% if params[:action] == "new" %>
    <%= form.hidden_field :user_id, :value => params[:user_id].html_safe %>
    <% else %>
    <%= form.hidden_field :user_id %>
  <% end %>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
